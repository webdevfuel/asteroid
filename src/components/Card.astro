---
interface Props {
	title: string;
	description: string;
	href: string;
	thumbnail: string;
}

const { title, description, href, thumbnail } = Astro.props as Props;
---

<div class="rounded-lg border border-gray-200">
	<img
		src={thumbnail}
		alt=""
		class="aspect-video rounded-t-lg object-cover"
	/>

	<div class="py-3.5 px-5">
		<a href={href} class="block mt-2.5 text-blue-700 hover:text-blue-800">
			<h2 class="text-xl font-bold text-blue-700">{title}</h2>
		</a>
		<p class="mt-2.5 text-gray-800">
			{description}
		</p>
		<a
			href={href}
			class="block mt-3.5 text-blue-700 hover:text-blue-800 hover:underline hover:underline-offset-2"
			>Read More</a
		>
	</div>
</div>
